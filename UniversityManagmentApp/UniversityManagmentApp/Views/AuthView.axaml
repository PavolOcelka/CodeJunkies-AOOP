<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UniversityManagmentApp.Views.AuthView">
    <StackPanel>
    <TextBlock FontSize="40" HorizontalAlignment="Center">Log in</TextBlock>
        <TextBox Width="250" Margin="0, 20, 0,0 " Watermark="Name"></TextBox>
        <TextBox Width="250" Margin="0,20,0,0" Watermark="Password" ></TextBox>
        <Button HorizontalAlignment="Center" Margin="0,50,0,0">Log in</Button>
    </StackPanel>
</UserControl>
